<div class="hero-unit">
<p id="notice"><%= notice %></p>

<div class="post">
  <div class="post-head">
    <h1><%= @post.title %></h1>
    <span class="post-head-span">
      <%= @post.post_time.strftime('%Y-%m-%d') %>
    </span>
    <br />
  </div>

  <div class="lead">
    <%= raw markdown(@post.content) %>
  </div>
</div>
</div>
<div class="hero-unit">
  <h2>Add a comment:</h2>
  <% form_for [@post, @post.comments.build], html_options = {:class => 'well'} do |f| %>
    <div class="field">
      <%= f.label :commenter %>
      <%= f.text_field :commenter, html_options = {:class => 'span4'} %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email, html_options = {:class => 'span4'} %>
    </div>

    <div class="field">
      <%= f.label :body %>
      <%= f.text_area :body,  html_options = {:rows => 5, :class => 'span4'} %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
