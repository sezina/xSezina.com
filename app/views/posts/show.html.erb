<div class="hero-unit">
<p id="notice"><%= notice %></p>

<div class="post">
  <div class="post-head">
    <h1><%= @post.title %></h1>
    <span class="post-head-span">
      <%= @post.post_time.strftime('%Y-%m-%d') %>
    </span>
    <br />
  </div>

  <div class="lead">
    <%= raw markdown(@post.content) %>
  </div>
</div>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
